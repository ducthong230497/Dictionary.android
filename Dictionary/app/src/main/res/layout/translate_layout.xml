<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Translate">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imvSpeak"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/sound"
                android:layout_gravity="right"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutTranslateWord">


                <!--<Button
                    android:id="@+id/btnAddFavoriteWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="@string/AddFavoriteWord"
                    />
                <Button
                    android:id="@+id/btnDeleteFavoriteWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="delete from favorite"
                    android:textAllCaps="false"
                    />-->
            </LinearLayout>

        </FrameLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnfabAddWord"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/addword"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
</FrameLayout>
