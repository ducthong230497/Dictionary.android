<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Translate">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txvWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    />
                <ImageView
                    android:id="@+id/imvSpeak"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/iconsound"

                    />
            </RelativeLayout>
            <Button
                android:id="@+id/btnAddFavoriteWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/AddFavoriteWord"
                />
            <Button
                android:id="@+id/btnDeleteFavoriteWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="delete from favorite"
                android:textAllCaps="false"
                />
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnfabAddWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addword"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>
</ScrollView>
