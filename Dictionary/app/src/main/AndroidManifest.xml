<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.media.dictionary">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera2"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Translate" android:parentActivityName=".MainActivity"/>

        <activity android:name=".Setting"/>

        <activity android:name=".LanguagesSetting" android:parentActivityName=".MainActivity"/>

        <activity android:name=".camera2" />

        <activity android:name=".OCR" android:parentActivityName=".MainActivity"/>

        <activity android:name=".VietnameseEnglishActivity"/>

        <activity android:name=".FavoriteWordActivity" android:parentActivityName=".MainActivity" />

        <service android:name=".FloatingViewService"
            android:enabled="true"
            android:exported="false"/>
    </application>

</manifest>